{
  "name": "root",
  "private": false,
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@tophat/commitizen-adapter": "^0.0.7",
    "@tophat/commitlint-config": "^0.0.7",
    "@tophat/eslint-config": "^0.1.4",
    "commitizen": "^3.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-jest": "^22.5.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lerna": "^3.13.3",
    "prettier": "^1.17.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "lint-fix": "eslint --ignore-path .gitignore . --fix",
    "lerna-publish": "lerna publish from-package --yes"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@tophat/commitizen-adapter"
    }
  }
}
