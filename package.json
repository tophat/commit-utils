{
  "name": "commit-watch",
  "version": "0.0.11",
  "description": "commit message status check for continuous integration",
  "main": "index.js",
  "repository": "git@github.com:tophat/commit-watch.git",
  "author": "Top Hat Monocle Corp. <opensource@tophat.com>",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rm -rf ${ARTIFACT_DIR:-artifacts} lib node_modules",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --format junit --output-file ${ARTIFACT_DIR:-artifacts}/test_results/eslint/eslint.junit.xml",
    "build:babel": "rm -rf lib && yarn babel src --out-dir=lib --copy-files --no-copy-ignored --ignore 'src/**/*.test.js'",
    "build:package": "yarn pack --filename ${ARTIFACT_DIR:-artifacts}/package.tgz",
    "build": "yarn build:babel && yarn build:package",
    "deploy": "npm publish ${ARTIFACT_DIR:-artifacts}/package.tgz --access public"
  },
  "bin": "./lib/index.js",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/preset-env": "^7.12.10",
    "@tophat/eslint-config": "^0.6.1",
    "all-contributors-cli": "^6.19.0",
    "axios-mock-adapter": "^1.19.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.0.6",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "@commitlint/format": "^11.0.0",
    "@commitlint/lint": "^11.0.0",
    "axios": "^0.21.0",
    "chalk": "^4.1.0",
    "git-raw-commits": "^2.0.8",
    "junit-report-builder": "^2.1.0"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "lint-staged": {
    "*.js": [
      "yarn eslint",
      "yarn jest --findRelatedTests"
    ]
  }
}
