{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@tophat/commit-utils-core": "^0.0.9",
    "@tophat/commitizen-adapter": "^0.0.11",
    "@tophat/commitlint-config": "^0.1.2",
    "@tophat/conventional-changelog-config": "workspace:packages/conventional-changelog-config",
    "@tophat/eslint-config": "^0.1.4",
    "all-contributors-cli": "^6.3.1",
    "commitizen": "^3.1.1",
    "compare-func": "^2.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-jest": "^22.5.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "figgy-pudding": "^3.5.2",
    "husky": "^2.1.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lodash": "^4.17.20",
    "longest": "^2.0.1",
    "monodeploy": "^2.1.1",
    "prettier": "^1.17.0",
    "safe-buffer": "^5.2.1",
    "word-wrap": "^1.2.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "lint:ci": "eslint . --format junit --output-file ${ARTIFACT_DIR:-artifacts}/test_results/eslint/eslint.junit.xml",
    "lint-fix": "eslint --ignore-path .gitignore . --fix",
    "test": "jest",
    "test:ci": "jest --ci",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@tophat/commitizen-adapter"
    }
  }
}
