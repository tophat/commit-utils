{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/tophat/commit-utils.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@monodeploy/plugin-github": "^0.6.2",
    "@tophat/commit-utils-core": "^0.6.1",
    "@tophat/commitizen-adapter": "^0.5.7",
    "@tophat/commitlint-config": "^0.3.7",
    "@tophat/conventional-changelog-config": "workspace:packages/conventional-changelog-config",
    "@tophat/eslint-config": "^3.3.0",
    "@types/jest": "^29.1.2",
    "@types/node": "^16",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "@yarnpkg/sdks": "^3.0.0-rc.25",
    "all-contributors-cli": "^6.20.4",
    "commitizen": "^3.1.1",
    "compare-func": "^2.0.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "figgy-pudding": "^3.5.2",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "jest-junit": "^14.0.1",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "monodeploy": "^3.3.1",
    "prettier": "^2.7.1",
    "safe-buffer": "^5.2.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "4.8.4",
    "word-wrap": "^1.2.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "lint": "eslint --ext ts,js .",
    "lint:ci": "run lint --format junit --output-file ${ARTIFACT_DIR:-artifacts}/test_results/eslint/eslint.junit.xml",
    "lint-fix": "run lint . --fix",
    "test": "jest --config jest.config.ts",
    "test:ci": "run test --ci",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "workspace:build": "rm -rf $0/lib && run -T tsc --build $0",
    "build": "yarn workspaces foreach -pvi --topological-dev run prepack"
  },
  "config": {
    "commitizen": {
      "path": "@tophat/commitizen-adapter"
    }
  },
  "packageManager": "yarn@3.2.4"
}
