{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/tophat/commit-utils.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@monodeploy/plugin-github": "^0.4.0",
    "@tophat/commit-utils-core": "^0.6.0",
    "@tophat/commitizen-adapter": "^0.5.5",
    "@tophat/commitlint-config": "^0.3.5",
    "@tophat/conventional-changelog-config": "workspace:packages/conventional-changelog-config",
    "@tophat/eslint-config": "^0.8.0",
    "@yarnpkg/sdks": "^2.6.0",
    "all-contributors-cli": "^6.3.1",
    "commitizen": "^3.1.1",
    "compare-func": "^2.0.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.9",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "figgy-pudding": "^3.5.2",
    "husky": "^2.1.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lodash": "^4.17.20",
    "monodeploy": "^3.0.0",
    "prettier": "^1.17.0",
    "safe-buffer": "^5.2.1",
    "word-wrap": "^1.2.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "lint:ci": "eslint . --format junit --output-file ${ARTIFACT_DIR:-artifacts}/test_results/eslint/eslint.junit.xml",
    "lint-fix": "eslint --ignore-path .gitignore . --fix",
    "test": "jest",
    "test:ci": "jest --ci",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@tophat/commitizen-adapter"
    }
  },
  "packageManager": "yarn@3.2.1"
}
